{
    "name": "Duo Passcode Generator",
    "description": "Generates HOTP Passcodes for Duo Security Multi-Factor Authentication",
    "version": "2.0.0",
    "manifest_version": 2,
    "background": {
        "scripts": ["dependencies/jsOTP.js","signoutDuo.js","background.js"],
        "persistent": true
    },
    "content_scripts": [{
        "matches": [ "*://*.duosecurity.com/*" ],
        "js": ["content.js"],
        "all_frames": true
    },{
        "matches":["https://www.whitman.edu/canvas*"],
        "js":["whitman.js"]
    },{
        "matches":["https://login.whitman.edu/*"],
        "js":["whitmanLogin.js"]
    }],
    "permissions": ["storage", "*://*.duosecurity.com/*","*://*.whitman.edu/*","cookies","tabs","activeTab"],
    "browser_action": {
        "default_popup": "./popup.html"
    },
    "icons": {
        "16": "./assets/icons/icon16.png",
        "48": "./assets/icons/icon48.png",
        "128": "./assets/icons/icon128.png"
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Alt+Shift+D"
            }
        }
    },
    "applications": {
        "gecko": {
            "id": "duo@extension"
        }
    }
}
